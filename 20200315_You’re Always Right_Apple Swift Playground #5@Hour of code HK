// If not a Gem
while (!isOnGem) {
    // Move Forward
    moveForward()
    // If isBlocked, turn Right
    if (isBlocked) {
        turnRight()
    }
    // If isOnClosedSwitch, toggle
    if (isOnClosedSwitch) {
        toggleSwitch()    
    }
}
collectGem()

