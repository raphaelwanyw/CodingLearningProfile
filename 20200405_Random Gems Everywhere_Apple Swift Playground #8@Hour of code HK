let totalGems = randomNumberOfGems
var gemCounter = 0
    //while gemCounter < totalGems

while gemCounter != totalGems {
    if isOnGem {
        collectGem()
        gemCounter += 1
    }
    //moveForward
    moveForward()
    if isBlocked {
        turnLeft()
        turnLeft()
        pinkPortal.isActive = !pinkPortal.isActive
        bluePortal.isActive = !bluePortal.isActive
        }
}
