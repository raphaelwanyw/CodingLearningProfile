let expert = Expert()
func turnAround() {
    expert.turnLeft()
    expert.turnLeft()
}
func moveFoward3() {
    expert.moveForward()
    expert.moveForward()
    expert.moveForward()
}

    //moveForward3
moveFoward3()

    //turnLockup
expert.turnLockUp()

    //turnAround
turnAround()

    //moveForward3
moveFoward3()

    //repeat 3 times
for i in 1 ... 3 {
    //turnLeft
expert.turnLeft()
    
    //moveForward3
moveFoward3()
    
    //collectGem
expert.collectGem()
    //turnAround
turnAround()
    
    //moveForward3
moveFoward3()
    
}
