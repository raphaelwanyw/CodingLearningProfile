#        t.goto(i,j)
#        rect(10,10,'yellow')

#t.goto(-240,180)
#rect(100,50,'red')

#feet
t.goto(-100,-150)
rect(50,20,'teal')

t.goto(-30,-150)
rect(50,20,'teal')

#legs
t.goto(-25,-50)
rect(15,100,'violet')

t.goto(-70,-50)
rect(15,100,'violet')


#body
t.goto(-90,100)
rect(100,150,'red')

#arms
t.goto(-150,70)
rect(60,15,'blue')
t.goto(-150,110)
rect(15,40,'blue')
t.goto(10,70)
rect(60,15,'blue')
t.goto(55,110)
rect(15,40,'blue')

#hands
t.goto(-150,110)
circle1(5,'blue')
t.goto(55,110)
circle1(5,'blue')


#neck
t.goto(-47.5,120)
rect(15,20,'green')

#head
t.goto(-80,170)
rect(80,50,'orange')

#hat
t.goto(-90,170)
tri(100,'red')


#eyes
t.goto(-55,160)
rect(30,10,'white')
t.goto(-50,157)
rect(5,5,'black')
t.goto(-35,157)
rect(5,5,'black')

#mouth
t.goto(-60,135)
rect(40,5,'red')

t.hideturtle()
