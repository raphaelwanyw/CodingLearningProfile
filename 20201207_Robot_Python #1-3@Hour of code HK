import turtle as t

t.penup()
t.shape('turtle')
t.bgcolor('dodger blue')
t.speed(10)

def rect(horizontal,vertical,color):
    t.pendown()
    t.color(color)
    t.begin_fill()
    for counter in range(0,2):
        t.forward(horizontal)
        t.right(90)
        t.forward(vertical)
        t.right(90)
    t.end_fill()
    t.penup()

def tri(length,color):
    t.pendown()
    t.color(color)
    t.begin_fill()
    for c in range(3):
        t.forward(length)
        t.left(120)
    t.end_fill()
    t.penup()

def circle1(length,color):
    t.pendown()
    t.color(color)
    t.begin_fill()
    for c in range(30):
        t.forward(length)
        t.left(12)
    t.end_fill()
    t.penup()


#for i in range(-400,400,100):
